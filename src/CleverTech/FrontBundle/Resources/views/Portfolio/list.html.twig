<section id="portfolio" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Portfolio</h2>
                <h3 class="section-subheading text-muted">Nasze realizacje.</h3>
            </div>
        </div>
        <div class="row">
            {% set count = projects|length %}
            {% for key,project in projects %}
                {% if count >= 3 %} 
                    {% set modalSize = 4 %}
                    {% set count = (key+1) % 3 == 0 ? count-3 : count %}
                {% else %}
                    {% set modalSize = (12//count%3) %}
                {% endif %}
                <div class="col-md-{{modalSize}} col-sm-12 portfolio-item">
                    <a href="#modal" class="portfolio-link" data-id="{{ project.id }}">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="{{ ("img/portfolio/"~project.filename) | imagine_filter('portfolio_thumb') }}" class="img-responsive" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{project.name}}</h4>
                        <p class="text-muted">{{project.shortDescription}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>