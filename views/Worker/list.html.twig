<section id="team" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Nasz zespół</h2>
                    <h3 class="section-subheading text-muted">Młodzi, lecz doświadczeni oraz pełni energii i lubiący wyzwania.</h3>
                </div>
            </div>
            <div class="row">
                {% set count = workers|length %}
                {% for worker in workers %}
                {% if count >= 3 %} 
                    {% set modalSize = 4 %}
                    {% set count = (key+1) % 3 == 0 ? count-3 : count %}
                {% else %}
                    {% set modalSize = (12//count%3) %}
                {% endif %}
                <div class="col-sm-{{ modalSize }}">
                    <div class="team-member">
                        <img src="{{ ("img/worker/"~worker.filename) | imagine_filter('worker_thumb') }}" class="img-responsive img-circle" alt="">
                        <h4>{{worker.name}} {{worker.surname}}</h4>
                        <p class="text-muted">{{worker.job}}</p>
                        <ul class="list-inline social-buttons">
                            {% if worker.twitter is not empty %}
                                <li><a href="http://twitter.com/{{worker.twitter}}"><i class="fa fa-twitter"></i></a></li>
                            {% endif %}
                            {% if worker.facebook is not empty %}
                                <li><a href="http://www.facebook.com/{{worker.facebook}}"><i class="fa fa-facebook"></i></a></li>
                            {% endif %}
                            {% if worker.linkedin is not empty %}
                                <li><a href="http://pl.linkedin.com/in/{{worker.linkedin}}"><i class="fa fa-linkedin"></i></a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">Nasz doświadczony zespół spełni Twoje oczekiwania.</p>
                </div>
            </div>
        </div>
    </section>